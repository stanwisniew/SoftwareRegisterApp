    {
      "cell_type": "code",
      "source": [
        "# Define function to ask questions about loaded PDFs only\n",
        "def ask_question(question, pdf_chunks, max_context_length=2048):\n",
        "    # Combine chunks from both PDFs up to the max_context_length\n",
        "    combined_chunks = []\n",
        "    for pdf_name, chunks in pdf_chunks.items():\n",
        "        combined_chunks.extend(chunks[:max_context_length // (512 * len(pdf_chunks))])\n",
        "\n",
        "    # Form context by joining all chunks into a single prompt\n",
        "    context = \" \".join(combined_chunks)\n",
        "\n",
        "    # Explicitly instruct the model to only answer based on this context\n",
        "    prompt = f\"Answer based strictly on the provided context.\\n\\nContext: {context}\\n\\nQuestion: {question}\\nAnswer:\"\n",
        "\n",
        "    # Tokenize prompt and send to model\n",
        "    input_ids = tokenizer(prompt, return_tensors=\"pt\").input_ids.to(model.device)\n",
        "\n",
        "    # Generate the answer\n",
        "    output = model.generate(input_ids, max_new_tokens=500)\n",
        "\n",
        "    # Decode the answer from model output\n",
        "    generated_text = tokenizer.decode(output[0], skip_special_tokens=True)\n",
        "\n",
        "    # Extract the answer portion after \"Answer:\" to refine output\n",
        "    match = re.search(r\"Answer:(.*)\", generated_text)\n",
        "    answer = match.group(1).strip() if match else \"No answer found.\"\n",
        "\n",
        "    return answer"
      ],
      "metadata": {
        "id": "zQmQTjnx5Ume"
      },
      "execution_count": 37,
      "outputs": []
    },
